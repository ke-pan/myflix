%section.admin_add_video
  .container
    .row
      .col-md-10.col-md-offset-1
        / %form.form-horizontal
        .form-horizontal
          %ul.nav.nav-tabs
            %li
              =link_to "Recent Payments", admin_payments_path
            %li.active
              %a(href="") Add a New Video
          %br
          =form_for @video, url: admin_videos_path do |f|
            %fieldset
              .form-group
                =f.label :name, "Title", class: "control-label col-sm-3"
                .col-sm-3
                  =f.text_field :name, class: "form-control"
              .form-group
                =f.label :categories, "Category", class: "control-label col-sm-3"
                .col-sm-6
                  =f.collection_select(:category_ids, Category.all, :id, :name, {}, class: "form-control")
              .form-group
                =f.label :description, class: "control-label col-sm-3"
                .col-sm-6
                  =f.text_area :description, class: "form-control", rows: "8"
              .form-group
                =f.label :large_cover, class: "control-label col-sm-3"
                .col-sm-6
                  %col.btn.btn-file
                    =f.file_field :large_cover, class: "form-control"
              .form-group
                =f.label :small_cover, class: "control-label col-sm-3"
                .col-sm-6
                  %col.btn.btn-file
                    =f.file_field :small_cover, class: "form-control"
              .form-group
                =f.label :video_url, class: "control-label col-sm-3"
                .col-sm-6
                  =f.text_field :video_url, class: "form-control"

            %fieldset.actions.form-group
              .col-sm-6.col-md-offset-3
                %input(type="submit" value="Add Video" class="btn btn-default")
