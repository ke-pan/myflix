%section.reset_password.container
  .row
    .col-sm-10.col-sm-offset-1
      -if @user.errors
        - @user.errors.full_messages.each do |message|
          =message
      =form_tag update_password_path do
        %header
          %h1 Reset Your Password
        %fieldset.form-group
          =label_tag "password", "New Password"
          .row
            .col-sm-4
              =password_field_tag "password", nil, class: "form-control"
              =hidden_field_tag "token", @user.reset_password_token
        %fieldset.form-group.action
          =submit_tag "Reset Password", class: "btn btn-default"
