%section.billing.container
  .row
    .col-sm-10.col-sm-offset-1
      .plan_and_payments
        %section.plan
          %header
            %h1 Billing
          %table.table
            %thead
              %tr
                %th
                %th Next Billing Date
                %th Price
            %tbody
              %tr
                %td The All You Can Watch Plan
                %td=@user.next_pay_date
                %td 9.99 per month
        = button_to "Cancel Service", nil, class: "btn btn-default"

        %section.payment_history
          %header
            %h3 Payment History
          %table.table
            %thead
              %tr
                %th Date
                %th Service Duration
                %th Total
            %tbody
              - @billings.each do |billing|
                %tr
                  %td=billing.payment_begin_date
                  %td=billing.serice_duration
                  %td=billing.payment
