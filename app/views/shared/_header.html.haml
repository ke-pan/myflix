%section#top-header.row
  %h1.col-md-2
    = link_to "MyFLiX", root_path
  %ul.col-md-4.clearfix
    %li= link_to "Videos"
    %li= link_to "My Queue"
    %li= link_to "People"
  %form.col-md-5.navbar-form(action="/videos/search")
    .form-group
      %input.form-control(type="text" placeholder="Search for videos here" name="item")
    %button.btn.btn-default(type="submit") Search
  #user_links.pull-right
    %ul
      %li.dropdown
        %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
          - if logged?
            = "Welcome, #{current_user.name}"
          - else
            Welcome, Guest
          %b.caret
        %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
          %li
            %a(href="#") Account
            %a(href="#") Plan and Billing
            = link_to "Sign Out", signout_path
