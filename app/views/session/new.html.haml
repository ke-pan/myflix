%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      %form.sign_in(action='/signin' method='post')
        %header
          %h1 Sign in
        %fieldset
          .form-group
            %label Email Address
            .row
              .col-sm-4
                %input.form-control(name='email' type="email")
          .form-group
            %label Password
            .row
              .col-sm-4
                %input.form-control(name='password' type="password")
        %fieldset.form-group.action
          %input(type="submit" value="Sign in" class="btn btn-default")
